<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/lab"
                android:fontFamily="monospace"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/playerpoints" android:textSize="30sp"/>
        <Button
                android:text="N"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/nbutton"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="W"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/wbutton" android:layout_weight="1"/>
            <Button
                    android:text="E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/ebutton" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="S"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/sbutton"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>